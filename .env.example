# Configurações do Banco de Dados
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=sua_senha
DB_NAME=sistenfrota

# Configurações da API
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000

# Configurações de JWT
JWT_SECRET=seu_jwt_secret
JWT_REFRESH_SECRET=seu_refresh_secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Serviços
AUTH_SERVICE_URL=http://localhost:3001
VEHICLES_SERVICE_URL=http://localhost:3002
MAINTENANCE_SERVICE_URL=http://localhost:3003
AUTH_SERVICE_PORT=3001
VEHICLES_SERVICE_PORT=3002
MAINTENANCE_SERVICE_PORT=3003

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Configurações de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app
SMTP_FROM=noreply@sistenfrota.com

# Frontend
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:3001

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Segurança
PASSWORD_SALT_ROUNDS=10
SESSION_SECRET=seu_session_secret
MAX_LOGIN_ATTEMPTS=3
LOGIN_BLOCK_DURATION=900 # 15 minutos em segundos